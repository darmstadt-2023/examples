<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="105*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Left" Name="btnLeft" Grid.Column="1" Grid.Row="1"  Click="btnLeft_Click" />
        <Button Content="Right" Name="btnRight" Grid.Column="3" Grid.Row="1" Click="btnRight_Click"  />
        <Label Grid.Column="4" Name="labelResult" Content="Label" Grid.Row="1"/>

    </Grid>
</Window>
